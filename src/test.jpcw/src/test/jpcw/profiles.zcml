<?xml version="1.0"?>
<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="test.jpcw">
  <!-- Include direct package dependencies -->
  <genericsetup:registerProfile
      name="qi"
      title="test Policy QI"
      directory="profiles/qi"
      description="Turn a Plone site into the test QIINFO site."
      provides="Products.GenericSetup.interfaces.EXTENSION"
    />
  <genericsetup:registerProfile
      name="default"
      title="test.jpcw"
      directory="profiles/default"
      description="Install the test.jpcw addon on this plone site."
      provides="Products.GenericSetup.interfaces.EXTENSION"
    />
  <genericsetup:registerProfile
      title="test.jpcw uninstall"
      name="uninstall"
      description="Uninstall the test.jpcw addon on tbis plone site."
      directory="profiles/uninstall"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      />
  <genericsetup:importStep
      name="test_jpcw setupVarious"
      title="various setup for test.jpcw "
      description="description"
      handler="test.jpcw.setuphandlers.setupVarious">
    <depends name="plone-content"/>
  </genericsetup:importStep>
  <!-- migration steps -->
  <genericsetup:importStep
      name="test_jpcw setupQi"
      title="Quick Installer products dependencies setup for test.jpcw"
      description="description"
      handler="test.jpcw.setuphandlers.setupQi">
    <depends name="plone-content"/>
  </genericsetup:importStep>
  <!-- -->
  <include package=".upgrades"/>
</configure>
